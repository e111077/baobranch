{
  "compilerOptions": {
    "target": "ES2023",
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "./lib",
    "strict": true,
    "types": ["node"],
    "verbatimModuleSyntax": true,
    "forceConsistentCasingInFileNames": true,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}